<div class="inner cover">
  <h1 class="cover-heading">Rails News</h1>
  <div class="row">
    <% @tweets.each do |tweet| %>
      <div class="col-md-6">
        <div class="tech-news">
          <div class="card" style="color:black">
            <%= tweet[:name] %> /
            <%= twitter_parser(tweet[:text]) %>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>


