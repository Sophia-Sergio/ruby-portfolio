<div class="col-md-4">
  <div class="card mb-4 box-shadow" data-id="<%= portfolio_item.id %>">
    <%= image_tag portfolio_img(portfolio_item, 'thumb') %> 
    <div class="card-body">
      <%= portfolio_item.title %> 
      <%= portfolio_item.subtitle %> 
      <p class="card-text"><%= portfolio_item.body %> </p>
      <div class="d-flex justify-content-between align-items-center">
        <div class="btn-group">
          <button type="button" class="btn btn-sm btn-outline-secondary"><%= link_to 'Show', portfolio_item %></button>
          <% if logged_in?(:site_admin)%>
            <button type="button" class="btn btn-sm btn-outline-secondary"><%= link_to 'Edit', portfolio_edit_path(portfolio_item) %></button>
          <% end %>
          <% if logged_in?(:site_admin)%>
            <button type="button" class="btn btn-sm btn-outline-secondary"><%= link_to 'Destroy', portfolio_item, method: :delete, data: { confirm: 'Are you sure?' }%></button>
          <% end %>
        </div>
        <small class="text-muted">9 mins</small>
      </div>
    </div>
  </div>
</div>