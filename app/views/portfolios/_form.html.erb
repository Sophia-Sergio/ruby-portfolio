<%= form_with(model: portfolio, local: true) do |f| %>
<br>
  <div class="row">
    <div class="col-md-6">
      <hr>
      <br>
      <div class="form-group">
        <%= f.label :title %>
        <%= f.text_field :title, placeholder: :title, class: 'form-control' %>
      </div>
      <div class="form-group">
        <%= f.text_field :subtitle, placeholder: :subtitle, class: 'form-control' %>
      </div>
      <div class="form-group">
        <%= f.text_field :body, placeholder: :body, class: 'form-control' %>
      </div>
    </div>
    <div class="col-md-6">
      <label class="btn btn-primary">
        Upload main image<%= f.file_field :main_image, style: 'display:none '%>
      </label>
      <label class="btn btn-primary">
        Upload thumb image<%= f.file_field :thumb_image, style: 'display:none ' %>
      </label>
      
      <h2>Techonlogies Used:</h2>
      <ul>
        <%= f.fields_for :technologies do |e|%>
          <li>
            <%= e.label :name %>
            <%= e.text_field :name, class: 'form-control' %>
          </li>
        <% end %>
      </ul>
      <div class="form-group">
        <%= f.submit 'Save', class: 'btn btn-primary btn-block'%>
      </div>
    </div>
  </div>
<% end %>