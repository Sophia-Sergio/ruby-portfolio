<h1>Angular Portfolio Items</h1>

<%= link_to "create new item", new_portfolio_path %>

<% @angular_portfolio_items.each do |portfolio_item| %>
  <div><%= link_to portfolio_item, portfolio_show_path(portfolio_item)%></div>  
  <div><%= portfolio_item.subtitle %></div>
  <div><%= portfolio_item.body %></div>
  <div><%= link_to 'Show', portfolio_item %></div>
  <div><%= link_to 'Edit', edit_portfolio_path(portfolio_item) if logged_in?(:site_admin)%></div>
  <div><%= link_to 'Destroy', portfolio_item, method: :delete, data: { confirm: 'Are you sure?' } if logged_in?(:site_admin)%></div>
<% end %>